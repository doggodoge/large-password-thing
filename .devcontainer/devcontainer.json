{
	"name": "Ubuntu",
	"image": "mcr.microsoft.com/devcontainers/base:jammy",
	"features": {
		"ghcr.io/devcontainers/features/node:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"github.copilot",
				"esbenp.prettier-vscode",
				"dbaeumer.vscode-eslint",
				"jdinhlife.gruvbox"
			],
			"settings": {
				"workbench.colorTheme": "Gruvbox Dark Medium",
				"editor.fontFamily": "'Rec Mono Casual', Consolas, 'Courier New', monospace",
				"editor.fontSize": 12
			}
		}
	}
}
